{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "packagePatterns": ["python"],
      "matchFileNames": [".python-version"],
      "updateTypes": ["patch"]
    },
    {
      "packagePatterns": ["actions/*"],
      "groupName": "GitHub Actions"
    }
  ]
}
